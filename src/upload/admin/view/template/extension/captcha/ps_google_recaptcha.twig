{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-captcha" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

		<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_signup }}</div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">

        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-captcha" class="form-horizontal">

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-security" data-toggle="tab">{{ tab_security }}</a></li>
            <li><a href="#tab-error-log" data-toggle="tab">{{ tab_error_log }}</a></li>
            <li><a href="#tab-support" data-toggle="tab">{{ tab_help_and_support }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_status" id="input-status" class="form-control">
										{% if captcha_ps_google_recaptcha_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-key-type">{{ entry_key_type }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_key_type" id="input-key-type" class="form-control">
										{% for key_type, name in recaptcha_key_types %}
										<option value="{{ key_type }}"{% if captcha_ps_google_recaptcha_key_type == key_type %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_key_type }}</div>
								</div>
							</div>

							<fieldset id="v3-score-threshold"{% if captcha_ps_google_recaptcha_key_type != 'v3' %} style="display: none;"{% endif %}>
								<legend>{{ heading_v3_score_threshold }}</legend>
								{% for captcha_page in captcha_pages %}
								<div class="form-group required">
									<label class="col-sm-2 control-label" for="input-v3-score-threshold-{{ captcha_page.value }}">{{ captcha_page.text }}</label>
									<div class="col-sm-10">
										<div class="input-group">
											<input type="number" step="0.1" min="0" max="1" name="captcha_ps_google_recaptcha_v3_score_threshold[{{ captcha_page.value }}]" value="{{ captcha_ps_google_recaptcha_v3_score_threshold[captcha_page.value] | default('0.5') }}" placeholder="{{ captcha_page.text }}" id="input-v3-score-threshold-{{ captcha_page.value }}" class="form-control" />
											<span class="input-group-btn">
												<button type="button" class="btn btn-info btn-reset" data-toggle="tooltip" data-input-id="input-v3-score-threshold-{{ captcha_page.value }}" title="{{ help_reset }}"><i class="fa fa-refresh"></i></button>
											</span>
										</div>
										{% if error_v3_score_threshold[captcha_page.value] %}<div class="text-danger">{{ error_v3_score_threshold[captcha_page.value] }}</div>{% endif %}
									</div>
								</div>
								{% endfor %}
								<div class="col-sm-offset-2 help-block text-muted">{{ help_v3_score_threshold }}</div>
							</fieldset>

							<div id="hide-badge" class="form-group"{% if captcha_ps_google_recaptcha_key_type != 'v3' and captcha_ps_google_recaptcha_key_type != 'v2_invisible' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-hide-badge">{{ entry_hide_badge }}</label>
								<div class="col-sm-10">
									<label class="radio-inline"> {% if captcha_ps_google_recaptcha_hide_badge %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="1" />
                    {{ text_yes }}
                    {% endif %} </label>
                  <label class="radio-inline"> {% if not captcha_ps_google_recaptcha_hide_badge %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="0" />
                    {{ text_no }}
                    {% endif %} </label>
									<div class="help-block text-muted">{{ help_hide_badge }}</div>
								</div>
							</div>

							<div id="badge-positions" class="form-group"{% if captcha_ps_google_recaptcha_key_type == 'v2_checkbox' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-position">{{ entry_badge_position }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_position" id="input-badge-position" class="form-control">
										{% for value, name in badge_positions %}
										<option value="{{ value }}"{% if captcha_ps_google_recaptcha_badge_position == value %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_position }}</div>
								</div>
							</div>

							<div id="badge-themes" class="form-group"{%
								if (captcha_ps_google_recaptcha_key_type == 'v3' and captcha_ps_google_recaptcha_badge_position != 'inline') or
								(captcha_ps_google_recaptcha_key_type == 'v2_invisible' and captcha_ps_google_recaptcha_badge_position != 'inline')
								%} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-theme">{{ entry_badge_theme }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_theme" id="input-badge-theme" class="form-control">
										{% for value, name in badge_themes %}
										<option value="{{ value }}"{% if captcha_ps_google_recaptcha_badge_theme == value %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_theme }}</div>
								</div>
							</div>

							<div id="badge-sizes" class="form-group"{% if captcha_ps_google_recaptcha_key_type == 'v3' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-size">{{ entry_badge_size }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_size" id="input-badge-size" class="form-control">
										{% for badge_size in badge_sizes %}
										<option value="{{ badge_size.value }}" data-value="{{ badge_size.value }}"{% if badge_size.disabled %} disabled{% endif %}{% if captcha_ps_google_recaptcha_badge_size == badge_size.value %} selected{% endif %}>{{ badge_size.name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_size }}</div>
								</div>
							</div>

							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-site-key">{{ entry_site_key }}</label>
								<div class="col-sm-10">
									<input type="text" name="captcha_ps_google_recaptcha_site_key" value="{{ captcha_ps_google_recaptcha_site_key }}" placeholder="{{ entry_site_key }}" id="input-site-key" class="form-control" />
									{% if error_site_key %}<div class="text-danger">{{ error_site_key }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_site_key }}</div>
								</div>
							</div>

							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-secret-key">{{ entry_secret_key }}</label>
								<div class="col-sm-10">
									<input type="text" name="captcha_ps_google_recaptcha_secret_key" value="{{ captcha_ps_google_recaptcha_secret_key }}" placeholder="{{ entry_secret_key }}" id="input-secret-key" class="form-control" />
									{% if error_secret_key %}<div class="text-danger">{{ error_secret_key }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_secret_key }}</div>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-send-client-ip">{{ entry_send_client_ip }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_send_client_ip" id="input-send-client-ip" class="form-control">
										{% if captcha_ps_google_recaptcha_send_client_ip %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

            </div>
						<div class="tab-pane" id="tab-security">

							<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_csp_info }}</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-script-nonce">{{ entry_script_nonce }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="captcha_ps_google_recaptcha_script_nonce" value="{{ captcha_ps_google_recaptcha_script_nonce }}" placeholder="{{ entry_script_nonce }}" id="input-script-nonce" class="form-control" />
										<span class="input-group-btn">
											<button type="button" class="btn btn-info btn-copy" data-toggle="tooltip" data-input-id="input-script-nonce" title="{{ help_copy }}"><i class="fa fa-copy"></i></button>
										</span>
									</div>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-google-captcha-nonce">{{ entry_google_captcha_nonce }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="captcha_ps_google_recaptcha_google_captcha_nonce" value="{{ captcha_ps_google_recaptcha_google_captcha_nonce }}" placeholder="{{ entry_google_captcha_nonce }}" id="input-google-captcha-nonce" class="form-control" />
										<span class="input-group-btn">
											<button type="button" class="btn btn-info btn-copy" data-toggle="tooltip" data-input-id="input-google-captcha-nonce" title="{{ help_copy }}"><i class="fa fa-copy"></i></button>
										</span>
									</div>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-css-nonce">{{ entry_css_nonce }}</label>
								<div class="col-sm-10">
									<div class="input-group">
										<input type="text" name="captcha_ps_google_recaptcha_css_nonce" value="{{ captcha_ps_google_recaptcha_css_nonce }}" placeholder="{{ entry_css_nonce }}" id="input-css-nonce" class="form-control" />
										<span class="input-group-btn">
											<button type="button" class="btn btn-info btn-copy" data-toggle="tooltip" data-input-id="input-css-nonce" title="{{ help_copy }}"><i class="fa fa-copy"></i></button>
										</span>
									</div>
								</div>
							</div>

						</div>
						<div class="tab-pane" id="tab-error-log">

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-error-log-status">{{ entry_enable_error_log }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_error_log_status" id="input-error-log-status" class="form-control">
										{% if captcha_ps_google_recaptcha_error_log_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-log-filename">{{ entry_log_filename }}</label>
								<div class="col-sm-10">
									<input type="text" name="captcha_ps_google_recaptcha_log_filename" value="{{ captcha_ps_google_recaptcha_log_filename }}" placeholder="{{ entry_log_filename }}" id="input-log-filename" class="form-control" />
									{% if error_log_filename %}<div class="text-danger">{{ error_log_filename }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_log_filename }}</div>
								</div>
							</div>

							<textarea name="log" wrap="off" rows="15" id="input-error-log" class="form-control" readonly>{{ error_log_output }}</textarea>
              <br/>
              <div class="form-group">
                <div class="col-sm-6">
                  <a href="{{ error_log_download }}" class="btn btn-primary" style="width: 100%;"><i class="fa fa-download"></i> {{ button_download }}</a>
                </div>
                <div class="col-sm-6">
                  <button type="button" value="{{ error_log_clear }}" data-input-id="input-error-log" class="btn btn-danger btn-clear-error-log" style="width: 100%;"><i class="fa fa-eraser"></i> {{ button_clear }}</button>
                </div>
              </div>

						</div>
						<div class="tab-pane" id="tab-support">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>
<script>
	$('.btn-clear-error-log').on('click', function () {
		var element = this;

		if (confirm('{{ text_confirm }}')) {
			$.ajax({
				url: $(element).attr('value'),
				dataType: 'json',
				beforeSend: function () {
					$(element).button('loading');
				},
				complete: function () {
					$(element).button('reset');
				},
				success: function (json) {
					$('.alert-dismissible').remove();

					if (json['error']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
					}

					if (json['success']) {
						$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

						$('#' + $(element).attr('data-input-id')).val('');
					}
				},
				error: function (xhr, ajaxOptions, thrownError) {
					console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		}
	});

	$('.btn-reset').on('click', function () {
		$("#" + $(this).data('inputId')).val('0.5');
	});

	$('.btn-copy').on('click', function () {
		var copyText = $("#" + $(this).data('inputId'));

		if (copyText.length) {
				copyText.select();
				copyText[0].setSelectionRange(0, 99999);
				document.execCommand("copy");
		}
	});

	$('#input-key-type').on('change', function() {
		var selectedValue = $(this).val();

		$('#badge-themes').hide();
		$('#badge-positions').hide();
		$('#badge-sizes').hide();
		$('#hide-badge').hide();
		$('#v3-score-threshold').hide();

		$('#input-badge-position').prop('selectedIndex', 0);
		$('#input-badge-theme').prop('selectedIndex', 0);
		$('#input-badge-size option').prop('disabled', true).prop('selected', false);
		$('#hide-badge input[value="0"]').prop('checked', true);

		if (selectedValue === 'v3') {
			$('#v3-score-threshold').show();
		}

		if (selectedValue === 'v3' || selectedValue === 'v2_invisible') {
			$('#hide-badge').show();
		}

		if (selectedValue === 'v2_checkbox') {
			$('#badge-themes').show();
		} else {
			$('#badge-positions').show();
		}

		if (selectedValue === 'v2_checkbox') {
			$('#input-badge-size option[data-value="normal"]').prop('disabled', false).prop('selected', true);
			$('#input-badge-size option[data-value="compact"]').prop('disabled', false).prop('selected', false);
			$('#badge-sizes').show();
		}

		if (selectedValue === 'v2_invisible') {
			$('#input-badge-size option[data-value="invisible"]').prop('disabled', false).prop('selected', true);
			$('#badge-sizes').show();
		}
	});

	$('#input-badge-position').on('change', function() {
		var selectedValue = $(this).val();

		$('#input-badge-theme').prop('selectedIndex', 0);

		if (selectedValue === 'inline') {
			$('#badge-themes').show();
		} else {
			$('#badge-themes').hide();
		}
	});
</script>
{{ footer }}
