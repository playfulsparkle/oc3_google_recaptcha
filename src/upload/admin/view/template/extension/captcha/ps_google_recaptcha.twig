{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-captcha" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

		<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_signup }}</div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">

        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-captcha" class="form-horizontal">

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-support" data-toggle="tab">{{ tab_help_and_support }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_status" id="input-status" class="form-control">
										{% if captcha_ps_google_recaptcha_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-key-type">{{ entry_key_type }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_key_type" id="input-key-type" class="form-control">
										{% for key_type, name in recaptcha_key_types %}
										<option value="{{ key_type }}"{% if captcha_ps_google_recaptcha_key_type == key_type %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_key_type }}</div>
								</div>
							</div>

							<div id="badge-positions" class="form-group"{% if captcha_ps_google_recaptcha_key_type == 'v2_checkbox' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-position">{{ entry_badge_position }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_position" id="input-badge-position" class="form-control">
										{% for value, name in badge_positions %}
										<option value="{{ value }}"{% if captcha_ps_google_recaptcha_badge_position == value %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_position }}</div>
								</div>
							</div>

							<div id="badge-themes" class="form-group"{%
								if (captcha_ps_google_recaptcha_key_type == 'v3' and captcha_ps_google_recaptcha_badge_position != 'inline') or
								(captcha_ps_google_recaptcha_key_type == 'v2_invisible' and captcha_ps_google_recaptcha_badge_position != 'inline')
								%} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-theme">{{ entry_badge_theme }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_theme" id="input-badge-theme" class="form-control">
										{% for value, name in badge_themes %}
										<option value="{{ value }}"{% if captcha_ps_google_recaptcha_badge_theme == value %} selected{% endif %}>{{ name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_theme }}</div>
								</div>
							</div>

							<div id="badge-sizes" class="form-group"{% if captcha_ps_google_recaptcha_key_type == 'v3' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-badge-size">{{ entry_badge_size }}</label>
								<div class="col-sm-10">
									<select name="captcha_ps_google_recaptcha_badge_size" id="input-badge-size" class="form-control">
										{% for badge_size in badge_sizes %}
										<option value="{{ badge_size.value }}" data-value="{{ badge_size.value }}"{% if badge_size.disabled %} disabled{% endif %}{% if captcha_ps_google_recaptcha_badge_size == badge_size.value %} selected{% endif %}>{{ badge_size.name }}</option>
										{% endfor %}
									</select>
									<div class="help-block text-muted">{{ help_badge_size }}</div>
								</div>
							</div>

							<div id="hide-badge" class="form-group"{% if captcha_ps_google_recaptcha_key_type != 'v3' %} style="display: none;"{% endif %}>
								<label class="col-sm-2 control-label" for="input-hide-badge">{{ entry_hide_badge }}</label>
								<div class="col-sm-10">
									<label class="radio-inline"> {% if captcha_ps_google_recaptcha_hide_badge %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="1" />
                    {{ text_yes }}
                    {% endif %} </label>
                  <label class="radio-inline"> {% if not captcha_ps_google_recaptcha_hide_badge %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="captcha_ps_google_recaptcha_hide_badge" value="0" />
                    {{ text_no }}
                    {% endif %} </label>
									<div class="help-block text-muted">{{ help_hide_badge }}</div>
								</div>
							</div>

							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-site-key">{{ entry_site_key }}</label>
								<div class="col-sm-10">
									<input type="text" name="captcha_ps_google_recaptcha_site_key" value="{{ captcha_ps_google_recaptcha_site_key }}" placeholder="{{ entry_site_key }}" id="input-site-key" class="form-control" />
									{% if error_site_key %}<div class="text-danger">{{ error_site_key }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_site_key }}</div>
								</div>
							</div>

							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-secret-key">{{ entry_secret_key }}</label>
								<div class="col-sm-10">
									<input type="text" name="captcha_ps_google_recaptcha_secret_key" value="{{ captcha_ps_google_recaptcha_secret_key }}" placeholder="{{ entry_secret_key }}" id="input-secret-key" class="form-control" />
									{% if error_secret_key %}<div class="text-danger">{{ error_secret_key }}</div>{% endif %}
									<div class="help-block text-muted">{{ help_secret_key }}</div>
								</div>
							</div>

            </div>
						<div class="tab-pane" id="tab-support">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>
<script>
	$('#input-key-type').on('change', function() {
		var selectedValue = $(this).val();

		$('#badge-themes').hide();
		$('#badge-positions').hide();
		$('#badge-sizes').hide();
		$('#hide-badge').hide();

		$('#input-badge-position').prop('selectedIndex', 0);
		$('#input-badge-theme').prop('selectedIndex', 0);
		$('#input-badge-size option').prop('disabled', true).prop('selected', false);
		$('#hide-badge input[value="0"]').prop('checked', true);

		if (selectedValue === 'v3') {
			$('#hide-badge').show();
		}

		if (selectedValue === 'v2_checkbox') {
			$('#badge-themes').show();
		} else {
			$('#badge-positions').show();
		}

		if (selectedValue === 'v2_checkbox') {
			$('#input-badge-size option[data-value="normal"]').prop('disabled', false).prop('selected', true);
			$('#input-badge-size option[data-value="compact"]').prop('disabled', false).prop('selected', false);
			$('#badge-sizes').show();
		}

		if (selectedValue === 'v2_invisible') {
			$('#input-badge-size option[data-value="invisible"]').prop('disabled', false).prop('selected', true);
			$('#badge-sizes').show();
		}
	});

	$('#input-badge-position').on('change', function() {
		var selectedValue = $(this).val();

		$('#input-badge-theme').prop('selectedIndex', 0);

		if (selectedValue === 'inline') {
			$('#badge-themes').show();
		} else {
			$('#badge-themes').hide();
		}
	});
</script>
{{ footer }}
